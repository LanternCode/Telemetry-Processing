{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <h2>{{ page_heading_2 }}</h2>
        <form action="{{ action_1 }}" method={{ method }}>
            <fieldset>
                <legend>{{ page_title }}</legend>
                <br>

                <p>Switches:</p>
                <label for="first-switch">1st Switch:</label>
                <input id="first-on" name="first" type="radio" value="on">
                <input id="first-off" name="first" type="radio" value="off">
                <br><br>
                <label for="second-switch">2nd Switch:</label>
                <input id="second-on" name="second" type="radio" value="on">
                <input id="second-off" name="second" type="radio" value="off">
                <br><br>
                <label for="third-switch">3rd Switch:</label>
                <input id="third-on" name="third" type="radio" value="on">
                <input id="third-off" name="third" type="radio" value="off">
                <br><br>
                <label for="fourth-switch">4th Switch:</label>
                <input id="fourth-on" name="fourth" type="radio" value="on">
                <input id="fourth-off" name="fourth" type="radio" value="off">
                <br><br>
                <label for="fan">Fan direction</label>
                <select name="fan">
                    <option value="forward">forward</option>
                    <option value="reverse">reverse</option>
                </select>
                <br><br>
                <label for="temperature">Enter Temperature</label>

                <input id="temperature" name="temperature" type="text" value="" size="10" maxlength="50" placeholder="0">
                <br><br>
                <label for="keypad">Keypad</label>

                <select name="keypad">
                    {% for i in 0..10 %}
                    <option value="{{ i }}">{{ i }}</option><br>
                    {% endfor %}
                </select>

                <br><br>
                <input type="submit" class="button-form" value="Send parameters">
                <br><br>
                <input type="reset" class="button-form" value="Reset all fields">
        </form>
        <br>
        <br>
        <form action="{{ action_2 }}">
            <input class="button-form" type="submit" value="Generate random data">
        </form>
            </fieldset>


        <p class="curr_page"><a href="{{ landing_page }}">Home</a></p>
    </div>
{% endblock %}
